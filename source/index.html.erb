  <script id="question-template" type="text/x-handlebars-template">
    <div class="question" id="question-{{id}}" style="display:none;">
      <button class="autoroll-button">
        ...
      </button>
      <div class="label">
        {{desc}}
        <div class="source" style="display:none"></div>
      </div>
      <div class="message" style='display:none'>Tired of clicking? Choose your desired value and we'll roll for you.
      </div>
      <div class="answer-and-dice">
        <button class="dice">
          <div class="dieface">&nbsp;</div>
        </button>
        <input class="answer" id="appendedInputButton" type="text" disabled="disabled" />
      </div>
      <div class="autoroll-select" style='display:none'>
        <select class='answer-selector'>
        </select>
      </div>
    </div>
